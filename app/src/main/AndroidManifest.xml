<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.xiu.xiu.campusvideo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".common.VideoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/App.Default">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.GuideActivity"
            android:launchMode="singleTop"
            android:noHistory="true" />

        <activity
            android:name=".ui.activity.HomeActivity"
            android:launchMode="singleTask"
            android:theme="@style/App.Home" />

        <activity
            android:name=".ui.activity.SearchActivity"
            android:windowSoftInputMode="adjustNothing" />

        <activity android:name=".ui.activity.VideoActivity" />

        <activity
            android:name=".ui.activity.PlayerActivity"
            android:configChanges="orientation|screenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@style/App.Player" />

        <activity android:name=".ui.activity.SettingActivity" />

        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/App.Home" />

    </application>

</manifest>
