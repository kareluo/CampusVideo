<resources>

    <style name="App" parent="Theme.AppCompat">
        <item name="background">@color/color_primary</item>
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_material_dark</item>

    </style>

    <style name="App.NoActionBar" parent="App">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="App.NoActionBar.Fullscreen" parent="App.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>
